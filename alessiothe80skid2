  <style>
    @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    body {
      background: #000000 url('https://www.transparenttextures.com/patterns/purty-wood.png');
      color: #39ff14;
      font-family: 'Press Start 2P', cursive;
      text-align: center;
      padding: 30px;
    }
    h1 {
      font-size: 1.5em;
      margin-bottom: 20px;
      text-shadow: 2px 2px #fuchsia;
    }
    .question {
      font-size: 1em;
      margin: 20px 0;
    }
    .answers button {
      display: block;
      margin: 10px auto;
      padding: 10px 20px;
      background-color: #ff00cc;
      border: 2px solid #00ffff;
      color: #fff;
      font-size: 1em;
      cursor: pointer;
      border-radius: 5px;
      font-family: 'Press Start 2P', cursive;
    }
    .answers button:hover {
      background-color: #00ffff;
      color: #000;
    }
    #result {
      font-size: 1.2em;
      margin-top: 30px;
    }
  </style>
